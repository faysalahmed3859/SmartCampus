@model SmartCampus.Models.SendMail
<!-- Hero section starts from here -->
<header id="top-banner">
    <div class="banner-content">
        <h1>Contact Us</h1>
    </div>
</header>
<!-- Hero section ends from here -->
<section id="contact">
    <div class="getin">
        <h2>Get in touch</h2>
        <p>Looking for help? Fill the form and start a new adventure.</p>

        <div class="getin-details">
            <h3>Headquaters</h3>
            <div>
                <i class="fa-solid fa-map get"></i>
                <p>51 Siddeswari Road (Ramna), Dhaka-1217</p>
            </div>

            <h3>Phone</h3>
            <div>
                <i class="fas fa-phone-alt get"></i>
                <p>+88-02-41032671-81 <br> 09613622622</p>
            </div>

            <h3>Support</h3>
            <div>
                <i class="fa-solid fa-envelope get"></i>
                <p> www.stamforduniversity.edu.bd <br> registrar@stamforduniversity.edu.bd</p>
            </div>

            <h3>Follow Us</h3>
            <div class="pro-links">
                <i class="fab fa-facebook"></i>
                <i class="fab fa-instagram"></i>
                <i class="fab fa-linkedin-in"></i>
                <i class="fab fa-behance"></i>
            </div>
        </div>
    </div>

    <div class="form">
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
        <h4>Let's Connect</h4>
        <p>you can send mail our LearnHub</p>
        @using (Html.BeginForm("Index", "Email", FormMethod.Post))
        {
            <div class="form-row">
                <input type="text" placeholder="Your Name">
                <input asp-for="@Model.To" required type="email" placeholder="Your Email">
            </div>
            <div class="form-col">
                <input asp-for="@Model.Subject" required type="text" placeholder="Subject line...">
            </div>
            <div class="form-col">
                <textarea asp-for="@Model.Body" required cols="30" rows="8" placeholder="How can we help?"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Send Email</button>
         }
    </div>
</section>
<section id="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3652.080601325421!2d90.4062474144557!3d23.7445049949196!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b88bfd0133c5%3A0xfde0a96bf5fecf99!2sStamford%20University%20Bangladesh!5e0!3m2!1sen!2sbd!4v1602658342574!5m2!1sen!2sbd" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>
