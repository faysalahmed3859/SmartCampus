@model SmartCampus.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}
<header id="top-banner">
    <div class="banner-content">
        <h1>Welcome to Our Stamford LarnHub</h1>
        <p>Update Your Profile</p>

    </div>
</header>
<section id="contact">
    <div class="container">
        <form asp-action="EditUser" method="post" enctype="multipart/form-data" class="mt-3">
            <div class="row">
                <div class="col-md-8 col-lg-8 col-8">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label>First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="form-group">

                                <label>Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Profile Image</label>
                                    <input asp-for="UserImage" type="file" class="form-control-file">
                                    <span asp-validation-for="UserImage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="container d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-outline-dark">Update</button>
                    </div>

                </div>
            </div>

        </form>
    </div>
</section>
