@using SmartCampus.Models
@model SmartCampus.Models.MakePost
@{
    ViewData["Title"] = "Resource Details";
    int i;
    int j;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>
<body>

    <!-- ARTICLE -->
    <article class="pt-7">

        <!-- HEADER -->
        <header class="container">
            <div class="row">
                <div class="col-12 text-center">

                    <!-- Heading -->
                    <h3 class="mb-3">5 Tips to Increase Your Online Sales</h3>

                    <!-- Subheading -->
                    <p class="mb-0 text-muted">
                        @Model.Date
                    </p>

                </div>
            </div>
        </header>

        <!-- Image -->
        <section class="pt-10" data-aos="fade-up"
                 data-aos-duration="2000">
            <div class="container">
                <div class="row">
                    <div class="col-12">

                        <!-- Image -->
                        @if (ViewBag.gallery != null)
                        {
                            @if (Model.ImagePath == null)
                            {

                                <img src="~/uploadimages/No_Image_Avail.png" />

                            }
                            else
                            {
                                foreach (var item in ViewBag.gallery)
                                {
                                    <img class="img-fluid" src="~/@item.ImagePath" alt="" />
                                }

                            }
                        }
                       

                    </div>
                </div>
            </div>
        </section>

        <!-- Content -->
        <section class="pt-10" data-aos="fade-up"
                 data-aos-duration="2000">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 font-size-lg text-gray-500">

                        <!-- Heading -->
                        <h5 class="mb-7 text-body">@Model.Title</h5>

                        <p class="mt-3">@Model.Description</p>

                    </div>
                </div>
            </div>
        </section>

        <!-- Images -->
        



    </article>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>