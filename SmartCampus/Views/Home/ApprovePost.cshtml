@model List<SmartCampus.Models.MakePost>

<h2>Pending Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Description</td>
                <td>
                    @if (!post.IsApproved)
                    {
                        <form asp-controller="Home" asp-action="ApprovePost" method="post" asp-route-id="@post.Id">
                            <button type="submit" class="btn btn-primary">Approve</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
