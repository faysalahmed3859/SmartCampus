@model IEnumerable<SmartCampus.Models.Subject>
@using SmartCampus.Extensions;

@{
    ViewData["Title"] = "Subjects";
}
<div class="action">
    <div class="row">
        <div class="col-md-2 col-12 col-lg-2">
            <a class="create" onclick="ShowInSmallPopup('@Url.Action("AddOrEdit","Subjects",null,Context.Request.Scheme)','New Subject' )"><i class="fas fa-plus"></i><span>New</span></a>
        </div>
        <div class="col-md-4 offset-md-6 col-lg-4 offset-lg-6 col-12">
            <form ap-action="Index" asp-controller="SubCategories" method="get">
                <input type="text" class="searchStringInput" value="@ViewBag.srcString" name="searchString" />
                <button class="srcBtn" type="submit">Search</button>
            </form>
        </div>
    </div>
</div>
<div class="body">
    <div class="row">
        <div class="col-md-12 col-12 col-lg-12">
            <div id="view-all">
                @await Html.PartialAsync("_ViewAllSubject", Model)

            </div>
        </div>
    </div>
</div>


